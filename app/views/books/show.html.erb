Books#show
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
    <%= flash[:notice] %>
        <div class="col-md-3">
            <h2>User info</h2>
            <%= image_tag @books.user.get_profile_image(100,100) %>
            <table>
              <tbody>
                <tr></tr>
                    <tr>
                        <th>name</th>
                        <th><%= @books.user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @books.user.introduction %></th>
                    </tr>
              </tbody>
              </table>
              <div class="row">
                <span class="btn btn-outline-secondary btn-block ">
                    <% if @books.user == current_user %>
                        <%= link_to edit_user_path(current_user) do %>
                            <i class="fa-solid fa-user-gear"></i>
                        <% end %>
                    <% else %>
                        <%= link_to edit_user_path(@books.user.id) do %>
                            <i class="fa-solid fa-user-gear"></i>
                        <% end %>
                    <% end %>
                </span>
              </div>
                    <h2>New book</h2>
                    <%= form_with model: @book do |f| %>
                        <h4>Title</h4>
                        <%= f.text_field :title %>
                        <h4>Body</h4>
                        <%= f.text_area :body %>
                        <%= f.submit 'Create Book' %>
                    <% end %>
        </div>


        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
                <td>
                    <%= link_to user_path(@books.user.id) do %>
                        <%= image_tag @books.user.get_profile_image(100,100) %><br>
                        <%= @books.user.name %>
                    <% end %>
                </td>
                <td><%= @books.title %></td>
                <td><%= @books.body %></td>
                <% if @books.user==current_user %>
                    <td><%= link_to"Edit", edit_book_path(@books.id) %></td>
                    <td><%= link_to"Destroy", book_path(@books.id), method: :delete %></td>
                <% end %>

                <!-- 部分テンプレート化
                    <%= form_with model: @book_form do |f| %>
                        <h4>Title</h4>
                        <%= f.text_field :title %>
                        <h4>Body</h4>
                        <%= f.text_area :body %>
                        <%= f.submit '投稿' %>
                    <% end %>
                -->
            </table>
        </div>
    </div>
  </div>
</main>